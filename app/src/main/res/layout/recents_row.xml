<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/place_image"
        android:layout_width="196dp"
        android:layout_height="100dp"
        android:background="@drawable/des"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="Moon Hotel"
        android:textColor="#101010"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_image" />

    <TextView
        android:id="@+id/countrtyName"
        android:layout_width="163dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:text="Naran"
        android:textColor="#101010"
        app:layout_constraintStart_toStartOf="@+id/placeName"
        app:layout_constraintTop_toBottomOf="@+id/placeName" />

    <TextView
        android:id="@+id/price"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="5000-PKR"
        android:textColor="#101010"
        app:layout_constraintStart_toStartOf="@+id/countrtyName"
        app:layout_constraintTop_toBottomOf="@+id/countrtyName" />
</androidx.constraintlayout.widget.ConstraintLayout>